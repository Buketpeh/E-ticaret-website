
@{
    Layout = "~/Views/Shared/SiteLayout.cshtml"; ;
}
<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Login to your account</h2>
                    <form class="user" method="post" action="/Admin/Login">
                        <input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Email Addresinizi Giriniz..." name="Eposta">
                        <input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Parola" name="Parola">

                        <span>
                            <input type="checkbox" class="checkbox">
                            Beni hatırla
                        </span>
                        @if (Session["KullaniciId"] == null)
                        {<p class="alert ">@ViewBag.Uyari</p>}
                        <button type="submit" class="btn btn-default">Giriş Yap</button>
                        <br />
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalAdresEkle">
                            Müşteri olarak kayıt ol!
                        </button>
                        <br />
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#TedarikciKayit">
                            Tedarikçi olarak kayıt ol! 
                        </button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section>


<form action="/Admin/MusteriKayit" method="post">
    <div class="modal fade" id="ModalAdresEkle" tabindex="-1" role="dialog" aria-labelledby="ModalAdresEkle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalAdresEkleLabel">Kayıt Ol</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group">
                            <label class="">
                                Ad :
                            </label>
                            <input type="text" name="ad" id="ad" value="" placeholder="Ad" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label class="">
                                Soyad :
                            </label>
                            <input type="text" name="soyad" id="soyad" value="" placeholder="Soyad" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label class="">
                                E-posta
                            </label>
                            <input type="text" name="Eposta" id="Eposta" value="" placeholder="E-posta" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label class="">
                                Parola
                            </label>
                            <input type="password" name="parola" id="parola" value="" placeholder="parola" class="form-control" />
                        </div>


                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>


