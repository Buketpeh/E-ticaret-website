
@{
    ViewBag.Title = "MusteriKayit";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}
<form action="/Admin/MusteriKayit" method="post">
    <div class="modal fade" id="ModalAdresEkle" tabindex="-1" role="dialog" aria-labelledby="ModalAdresEkle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalAdresEkleLabel">Kayıt Ol</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group">
                            <label class="">
                                Ad :
                            </label>
                            <input type="text" name="ad" id="ad" value="" placeholder="Ad" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label class="">
                                Soyad :
                            </label>
                            <input type="text" name="soyad" id="soyad" value="" placeholder="Soyad" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label class="">
                                E-posta
                            </label>
                            <input type="text" name="Eposta" id="Eposta" value="" placeholder="E-posta" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label class="">
                                Parola
                            </label>
                            <input type="password" name="parola" id="parola" value="" placeholder="parola" class="form-control" />
                        </div>

                       
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>